{% extends 'base.html.twig' %}
{% block body %}
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
                <div class="carousel-item active" style="background-image: url('{{ asset('https://images.cdn.yle.fi/image/upload//w_1199,h_550,f_auto,fl_lossy,q_auto/13-3-7069960.jpg') }}') ">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Première Image</h3>
                        <p>Description de la première image</p>
                    </div>
                </div>
                <!-- Slide Two - Set the background image for this slide in the line below -->
                <div class="carousel-item"
                     style="background-image: url('{{ asset('https://images.freeimages.com/images/previews/dfb/snowboard-jump-1249837.jpg') }}')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Second Slide</h3>
                        <p>This is a description for the second slide.</p>
                    </div>
                </div>
                <!-- Slide Three - Set the background image for this slide in the line below -->
                <div class="carousel-item"
                     style="background-image: url('https://cdnolympicfr.files.wordpress.com/2011/09/sarah_conrad_action_2010_e_1340px.jpg?quality=100&w=634')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Third Slide</h3>
                        <p>This is a description for the third slide.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>

   <div class="container" style="margin-top: 10px">
        {% if app.user %}
            <a class="btn btn-success" href="{{ path('snowtricks_addtricks') }}"><span class="fa fa-plus"> Ajouter un Tricks</span></a>
        {% endif %}
        <h2>Liste des Tricks</h2>

        <div class="row">
            {% for trick in pagination.tricks %}
            <div class="col-lg-3 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="{{ path('snowtricks_viewtricks', {'slug': trick.slug}) }}">
                        {% for trickPicture in trick.pictures %}
                            {% if loop.first %}
                                <img class="card-img-top" height="150px" title="{{ trick.name }}" src="{{ asset('uploads/pictures/' ~ trick.pictures.0.fileName) }}" alt="">
                            {% endif %}
                        {% else %}
                            <img class="card-img-top" title="Aucune image" src="https://i.stack.imgur.com/8cenv.png" height="150px" alt="">
                        {% endfor %}
                        {% for trickvideo in trick.videos %}
                        {% else %}
                            <img src="{{ asset('pictures/aucune vidéo.png') }}" title="Aucune vidéo" alt="Pad de vidéo" height="20px" style="display: block; margin-top: -20px; margin-left: auto; margin-right: auto">
                        {% endfor %}
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ path('snowtricks_viewtricks', {'slug': trick.slug}) }}">{{ trick.name }}</a>
                        </h4>
                        <p class="card-text">{{ trick.description|truncate(100, true, '...') }}</p>
                    </div>
                    {% if app.user %}
                        <a href="{{ path('snowtricks_edittricks', {'slug': trick.slug}) }}" class="btn btn-info"><span class="fa fa-pencil"> Éditer {{ trick.name|truncate(20, false, '...') }}</span></a>
                        <a href="{{ path('snowtricks_deletetricks', {'slug': trick.slug}) }}" class="btn btn-danger"><span class="fa fa-trash"> Supprimer {{ trick.name|truncate(20, false, '...') }}</span></a>
                    {% endif %}
                </div>
            </div>
            {% endfor%}
        </div>
    </div>

    {% if pagination.nbPages > 0 %}
        <div class="container" style="text-align: center">
            <ul class="pagination" style="display: inline-flex">
                {% if pagination.currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('snowtricks_homepage', {'page': 1}) }}"><<</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{ path('snowtricks_homepage', {'page': pagination.currentPage-1}) }}"><</a>
                    </li>
                {% endif %}
                {% for p in range(max(pagination.currentPage-4, 1), min(pagination.currentPage+4, pagination.nbPages)) %}
                    <li {% if p == pagination.currentPage %} class="active page-item"{% endif %}>
                        <a class="page-link" href="{{ path('snowtricks_homepage', {'page': p}) }}">{{ p }}</a>
                    </li>
                {% endfor %}
                {% if pagination.currentPage < pagination.nbPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('snowtricks_homepage', {'page': pagination.currentPage+1}) }}">></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{ path('snowtricks_homepage', {'page': pagination.nbPages}) }}">>></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    {% endif %}

    <div id="img-scroll-top">
        <a href="#top"><img src="https://www.linuxtricks.fr/upload/to_top.png" alt="" title="Haut de la page"></a>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        jQuery(function () {
            $(function () {
                $(window).scroll(function () {
                    if ($(this).scrollTop() > 200) {
                        $('#img-scroll-top').css('right', '100px');
                    } else {
                        $('#img-scroll-top').removeAttr('style')
                    }
                });
            });
        });
    </script>
{% endblock %}