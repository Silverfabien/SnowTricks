{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">
        <div class="row">
            <h3>Formulaire de connexion</h3>
            <div class="container form-group">
                {{ form_start(loginForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(loginForm) }}
                <button type="submit" class="btn btn-primary">Envoyer</button>
                {{ form_end(loginForm) }}
            </div>
        </div>
    </div>

    <style> {# Appel d'une class de bootstrap pour modifier la checkbox #}
        .form-check-input {
            margin-left: 0;
        }
    </style>

{% endblock %}