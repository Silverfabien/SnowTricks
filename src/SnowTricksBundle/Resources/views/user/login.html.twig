{% extends 'base.html.twig' %}
{% block body %}

    <br>
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <p class="alert alert-{{ label }}">Le pseudo ou le mot de passe est incorrect</p>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="container">
        <div class="row">
            <h3>Formulaire de connexion</h3>
            <div class="container form-group">
                {{ form_start(loginForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(loginForm) }}
                <button type="submit" class="btn btn-primary">Envoyer</button>
                {{ form_end(loginForm) }}
            </div>
        </div>
        <p style="text-align: center"><a href="{{ path('snowtricks_register') }}">S'inscrire</a> / <a href="{{ path('snowtricks_forgotpassword') }}">Mot de passe oubli√© ?</a></p>
    </div>

    <style> {# Appel d'une class de bootstrap pour modifier la checkbox #}
        .form-check-input {
            margin-left: 0;
        }
    </style>

{% endblock %}